public class MinhaClasse {
    // Variáveis de instância
    private int valor1;
    private String valor2;

    // Construtor padrão (sem argumentos)
    public MinhaClasse() {
        // Código de inicialização do construtor
        valor1 = 0;
        valor2 = "Padrão";
    }

    // Construtor personalizado (com argumentos)
    public MinhaClasse(int v1, String v2) {
        // Código de inicialização do construtor
        valor1 = v1;
        valor2 = v2;
    }

    // Outros métodos da classe
    public void imprimirValores() {
        System.out.println("Valor 1: " + valor1);
        System.out.println("Valor 2: " + valor2);
    }

    public static void main(String[] args) {
        // Exemplo de uso dos construtores
        MinhaClasse objeto1 = new MinhaClasse(); // Usa o construtor padrão
        MinhaClasse objeto2 = new MinhaClasse(42, "Personalizado"); // Usa o construtor personalizado

        objeto1.imprimirValores();
        objeto2.imprimirValores();
    }
}
