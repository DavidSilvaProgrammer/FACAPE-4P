import java.util.*;

class MediaAritmetica {
    public static void main(String[] args){
        int a,b;
        float c;
        Scanner input = new Scanner(System.in);
        System.out.println("Digite dois numero para obter a media aritmetica: ");
        a= input.nextInt();
        b= input.nextInt();
        c= (float)(a+b)/2;
        
        System.out.println("Resultado da media aritmetica: "+ c);

        input.close();
        
    }
}

*********************************

import java.io.*;
class MediaAritmetica{
    public static void main(String[] args) throws Exception {
        DataInputStream input = new DataInputStream(System.in);
        int a, b;
        float c;
        
        
        System.out.println("Digite dois numeros inteiros para obter a media aritmetica: ");
        a = Integer.valueOf(input.readLine()).intValue();
        b = Integer.valueOf(input.readLine()).intValue();
        
        c = (float)(a+b)/2;
        
        System.out.println("Resultado da media aritmetica: "+ c);
        
        input.close();
        
    }
}
